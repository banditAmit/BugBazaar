<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="676dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/nav_toolbar_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></include>

            <ImageView
                android:id="@+id/detailedImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/deadpool" />

            <TextView
                android:id="@+id/detailedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:text="Product Name"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:text="Price"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:text="Product Description:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailedDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:text="Product Description"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/sharp_button_corners"
            android:text="Add to Cart"></Button>

        <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@drawable/sharp_button_corners"
        android:text="Save to Wishlist"
        ></Button>
    </LinearLayout>
</LinearLayout>