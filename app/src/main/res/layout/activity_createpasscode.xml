<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Display a title or prompt for passcode creation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Passcode"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Display a passcode input field -->
    <EditText
        android:id="@+id/editTextPasscode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:gravity="center"
        android:ems="4" />

    <!-- Optionally, add a button for passcode creation -->
    <Button
        android:id="@+id/btnCreatePasscode"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Create Passcode"
        android:layout_marginTop="16dp" />

</LinearLayout>
